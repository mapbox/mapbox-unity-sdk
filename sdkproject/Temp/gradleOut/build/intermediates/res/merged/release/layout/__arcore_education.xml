<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical"
    tools:targetApi="N">
  <TextView
      android:id="@+id/__arcore_messageText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="24dp"
      android:text="@string/__arcore_install_app" />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="4dp"
      android:gravity="end"
      android:orientation="horizontal">
    <Button
        android:id="@+id/__arcore_cancelButton"
        style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/__arcore_cancel"/>
    <Button
        android:id="@+id/__arcore_continueButton"
        style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/__arcore_continue" />
  </LinearLayout>
</android.widget.LinearLayout>
